  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:api-gateway": "nest start api-gateway --watch",
    "start:catalog": "nest start catalog --watch",
    "start:account": "nest start account --watch",
    "start:cart": "nest start cart --watch",
    "start:order": "nest start order --watch",
    "start:all-services": "concurrently \"npm run start:dev catalog\" \"npm run start:dev api-gateway\" \"npm run start:dev account\"",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/graph-qlmodsen-task/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/catalog/test/jest-e2e.json"
  },
